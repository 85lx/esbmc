#ifndef __STL_DEQUE
#define __STL_DEQUE

#include <vector>

namespace std {
  template <class T>
  class deque {
    public:

    // types:
    typedef T& reference;
    typedef const T& const_reference;


    class iterator{
      public:
	  vector<T>::iterator it;

	  iterator(vector<T>::iterator in){
		  it = in;
	  }

      iterator(const iterator& i){
    	  it = i.it;
      }
      iterator() : it(){

      }
      iterator& operator=(const iterator& i){
    	  it = i.it;
      }

      T* operator -> ();

      T& operator * (){
    	  return *it;
      }

      iterator& operator ++ (int b){
    	  it++;
    	  vector<T>::iterator it1 = it - 1;
    	  return iterator(it1);
      }

      iterator& operator ++ (){
          	  return iterator(++it);
            }

      iterator& operator -- (){
    	  return iterator(++it);
      }
      iterator& operator -- (int){
    	  return iterator(it++);
      }

      bool operator == ( const iterator& i)const{
    	  return (it == i.it);
      }
      bool operator != ( const iterator& i)const{
    	  return (it != i.it);
      }

      bool operator < ( const iterator& i)const{
    	  return (it < i.it);
      }
      bool operator > ( const iterator& i)const{
    	  return (it > i.it);
      }

      bool operator <= ( const iterator& i)const{
    	  return (it <= i.it);
      }
      bool operator >= ( const iterator& i)const{
    	  return (it >= i.it);
      }

      iterator operator + (int n) const{
    	  return iterator(it+n);
      }
      iterator operator - (int n) const{
    	  return iterator(it-n);
      }

      iterator& operator += (int n){
    	  return iterator(it+=n);
      }
      iterator& operator -= (int n){
    	  return iterator(it-=n);
      }
    };

    class const_iterator
    {
      public:
      const_iterator(const const_iterator&);
      const_iterator();
      const_iterator& operator=(const const_iterator&);

      const T* operator -> ();

      const T& operator * ();

      const_iterator& operator ++ ();
      const_iterator& operator ++ (int);

      const_iterator& operator -- ();
      const_iterator& operator -- (int);

      bool operator == ( const const_iterator&)const;
      bool operator != ( const const_iterator&)const;

      bool operator < ( const const_iterator&)const;
      bool operator > ( const const_iterator&)const;

      bool operator <= ( const const_iterator&)const;
      bool operator >= ( const const_iterator&)const;

      const_iterator operator + (int) const;
      const_iterator operator - (int) const;

      const_iterator& operator += (int);
      const_iterator& operator -= (int);
    };

    class reverse_iterator{
      public:
      reverse_iterator(const reverse_iterator&);
      reverse_iterator();
      reverse_iterator& operator=(const reverse_iterator&);

      T* operator -> ();

      T& operator * ();

      reverse_iterator& operator ++ ();
      reverse_iterator& operator ++ (int);

      reverse_iterator& operator -- ();
      reverse_iterator& operator -- (int);

      bool operator == ( const reverse_iterator&)const;
      bool operator != ( const reverse_iterator&)const;

      bool operator < ( const reverse_iterator&)const;
      bool operator > ( const reverse_iterator&)const;

      bool operator <= ( const reverse_iterator&)const;
      bool operator >= ( const reverse_iterator&)const;

      reverse_iterator operator + (int) const;
      reverse_iterator operator - (int) const;

      reverse_iterator& operator += (int);
      reverse_iterator& operator -= (int);
    };

    class  const_reverse_iterator {
      public:
      const_reverse_iterator(const const_reverse_iterator&);
      const_reverse_iterator();
      const_reverse_iterator& operator=(const const_reverse_iterator&);

      const T* operator -> ();

      const T& operator * ();

      const_reverse_iterator& operator ++ ();
      const_reverse_iterator& operator ++ (int);

      const_reverse_iterator& operator -- ();
      const_reverse_iterator& operator -- (int);

      bool operator == ( const const_reverse_iterator&)const;
      bool operator != ( const const_reverse_iterator&)const;

      bool operator < ( const const_reverse_iterator&)const;
      bool operator > ( const const_reverse_iterator&)const;

      bool operator <= ( const const_reverse_iterator&)const;
      bool operator >= ( const const_reverse_iterator&)const;

      const_reverse_iterator operator + (int) const;
      const_reverse_iterator operator - (int) const;

      const_reverse_iterator& operator += (int);
      const_reverse_iterator& operator -= (int);
    };

    typedef int size_type;
    typedef int difference_type;
    typedef T value_type;

    // construct/copy/destroy:
    explicit deque(): buff() { }
    explicit deque(size_type n){
    	buff = vector<T>(n);
    }
    explicit deque(size_type n, const T& value){
    	buff = vector<T>(n, value);
    }
    explicit deque(T t[], T* addr): buff()
    {         
        buff = vector<T>(t, addr);
    }

    explicit deque(iterator i1, iterator i2): buff()
        {
            buff = vector<T>(i1.it, i2.it);
        }

    deque(const deque<T>& x){
    	buff = x.buff;
    }
    ~deque();

    deque<T>& operator=(const deque<T>& x){
    	buff = x.buff;
    	return *this;
    }

    void assign(size_type n, const T& t){
    	buff.assign(n, t);
    }

    void assign(iterator first, iterator last){
    	buff.assign(first.it, last.it);
    }

    void assign(T n[], T* addr){
    	buff.assign(n, addr);
    }

    // iterators:
    iterator begin(){
    	iterator buffer = iterator(buff.begin());
    	return buffer;
    }
//    const_iterator begin() const;
    iterator end(){
    	return iterator(buff.end());
    }
/*    const_iterator end() const;
    reverse_iterator rbegin(){
    	return iterator(buff.rbegin());
    }
    const_reverse_iterator rbegin() const;
    reverse_iterator rend(){
    	return iterator(buff.rend());
    }
    const_reverse_iterator rend() const;
*/
    // capacity:
    size_type size() const
    {
    	return buff.size();
    }
    size_type max_size() const;
    void resize(size_type sz){
    	buff.resize(sz);
    }
    void resize(size_type sz, T c){
    	buff.resize(sz, c);
    }

    bool empty() const
    {
    	return buff.empty();
    }

    // element access:
    reference operator[](size_type i)
    {
    	return buff[i];
    }
    const_reference operator[](size_type i) const
    {
    	return buff[i];
    }
    void push_front(const T& x) {
    	buff.insert(buff.begin(), x);
    }
    void push_back(const T& x)  {
    	buff.push_back(x);
    }
    reference back()
    {
        return buff[buff.size()-1];
    }
    void pop_front(){
    	buff.erase(buff.begin());
    }
    void pop_back(){
    	buff.pop_back();
    }
    reference front()
    {
        return buff[0];
    }

    reference at(size_type n){
    	return buff.at(n);
    }
    const_reference at(size_type n) const{
    	return buff.at(n);
    }

    const_reference front() const
    {
        return buff[0];
    }

    const_reference back() const
    {
        return buff[buff.size()-1];
    }

    // modifiers:
    iterator insert(iterator position, const T& x){
    	return iterator(buff.insert(position.it, x));
    }
    void insert(iterator position, size_type n, const T& x){
    	buff.insert(position.it, n, x);
    }

    iterator erase(iterator position){
    	return iterator(buff.erase(position.it));
    }
    iterator erase(iterator first, iterator last){
    	return iterator(buff.erase(first.it, last.it));
    }

    void swap(deque<T>& d){
    	buff.swap(d.buff);
    }
    void clear(){
    	buff.clear();
    }

    // comparators:
/*
    bool operator == (const deque<T> d) const{
    	return (buff == d.buff);
    }
    bool operator != (const deque<T> d) const;
    bool operator >= (const deque<T> d) const;
    bool operator <= (const deque<T> d) const;
*/
    public:
    	vector<T> buff;
  };

//template<class T>
//  bool deque<T>::operator!= (const deque<T> d) const{
//	  return (this->buff != d.buff);
//  }
//template<class T>
//  bool deque<T>::operator>= (const deque<T> d) const{
//	  return (this->buff >= d.buff);
//  }
//template<class T>
//  bool deque<T>::operator<= (const deque<T> d) const{
//	  return (this->buff <= d.buff);
//  }

}
#endif

