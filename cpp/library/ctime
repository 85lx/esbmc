#ifndef STL_CTIME
#define STL_CTIME

#include "definitions.h"

#ifndef _TIME_T_DEFINED
typedef long int time_t;
#endif

time_t time (time_t *timer);

time_t time (time_t *timer)
{
  time_t t = nondet_uint();

  if (timer!=NULL)
    *timer = t;

  return t;
}

struct tm * localtime ( const time_t * timer );

char * asctime ( const struct tm * timeptr );

#endif

