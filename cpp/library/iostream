#ifndef STL_IOSTREAM
#define STL_IOSTREAM

#include "iomanip"
#include "definitions.h"
#include "ios"
#include "istream"
#include "ostream"
#include "string"

namespace std
{
	struct iostream: ostream, istream
	{
		iostream(int id = 0): ostream(id), istream(id){}
	private:
		iostream(const iostream&); // disabled
		iostream& operator=(const iostream&); // disabled
	};

	extern istream cin;
	extern ostream cout;
	extern ostream cerr;
//	extern ios_base ios;

	char endl = '\n';
}

#endif
