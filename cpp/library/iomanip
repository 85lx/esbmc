#ifndef STL_IOMANIP
#define STL_IOMANIP

#include "definitions.h"

namespace std
{
	struct boolalphaStruct
	{
		boolalphaStruct();
	};

	struct noboolalphaStruct
	{
		noboolalphaStruct();
